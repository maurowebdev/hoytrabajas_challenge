.antialiased.bg-black.h-full.w-full.min-h-screen.text-slate-300.relative.py-10.px-10
  - if notice.present?
    %p.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block#notice= notice

  .flex.justify-between.items-center
    %h1.font-bold.text-4xl
      = t('banks_title')
    = link_to t('bank.new'), new_bank_path, class: 'rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium'

  #banks.min-w-full
    = render 'banks'
  .antialiased.bg-black.w-full.text-slate-300.relative.py-10.px-40
    = pagy_nav(@pagy).html_safe
  %br
  .flex.justify-between.items-center
    = link_to t('admin.dashboard_subtle'), admin_index_path, class: 'rounded-lg py-3 bg-neutral-800 m-auto px-5 inline-block font-medium'
