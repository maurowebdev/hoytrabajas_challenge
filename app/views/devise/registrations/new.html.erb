<div class="mx-auto md:w-2/3 w-full p-20 max-w-lg rounded overflow-hidden shadow-lg">
  <h1 class="font-bold text-4xl"><%= t('sign_up') %></h1>
  <br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, t('helpers.label.registration.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <br>

    <div class="field">
      <%= f.label :password, t('helpers.label.registration.password') %>
      <% if @minimum_password_length %>
      <em>(<%= "#{@minimum_password_length} #{t('helpers.label.registration.min_password')}" %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, t('helpers.label.registration.password_confirmation') %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit t('sign_up') %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
